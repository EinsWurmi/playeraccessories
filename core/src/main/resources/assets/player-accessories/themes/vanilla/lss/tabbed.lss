.background-header {
    width: 100%;
    height: 42;

    left: 0;
    top: 0;

    renderer: "DirtBackground";

    background-always-dirt: true;
    background-dirt-brightness: 645;

    priority-layer: very_back;
}

.menu {
    width: fit-content;
    height: fit-content;

    left: 50%;
    top: 27;

    alignment-x: center;

    renderer: "Background";
    priority-layer: very_front;
    space-between-entries: 3;

    &.converted {
        top: null;
        bottom: 0;
    }

    Tab {
        width: fit-content;
        height: 8;

        left: 0;
        top: 0;

        padding: 3 5 3 5;

        margin-top: 2;

        background-color: rgba(0, 0, 0, 130);

        Component {
            width: fit-content;
            height: fit-content;

            left: 50%;
            top: 0;

            alignment-x: center;

            text-color: rgb(100, 100, 100);
        }

        &:hover {
            Component {
                text-color: rgb(155, 155, 155);
            }
        }

        &:active {
            height: 10;
            margin-top: 0;

            Component {
                text-color: rgb(255, 255, 255);
            }
        }
    }
}

.tabbed-activity {
    width: 100%;

    top: 42;
    bottom: 0;
}