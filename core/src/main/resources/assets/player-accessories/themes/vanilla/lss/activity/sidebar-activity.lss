SidebarButton {
    width: 100%;
    height: 20;

    * {
        alignment-x: center;
    }

    &:active Component {
        text-color: gray;
    }
}

.container {
    width: 90%;
    max-width: 400;

    left: 50%;
    top: 1;
    bottom: 0;

    alignment-x: center;
    orientation: horizontal;

    .container-sidebar {
        width: 120;
        
        left: 0;
        top: 0;
        bottom: 0;

        .container-scroll {
            height: 100%;

            left: 0;
            top: 0;
            right: 0;

            border-radius: 7 0 0 7;

            Scroll {
                width: 100%;
                height: 100%;

                left: 0;
                top: 0;

                scroll-speed: 20;

                padding: 0;
                padding-right: 5;
                padding-top: 5;
                padding-bottom: 5;

                margin-right: 5;

                .sidebar {
                    height: fit-content;
                    padding: 0 2 0 2;

                    Hr {
                        visible: false;
                    }

                    .search-field-input {
                        width: 100%;

                        alignment-x: center;

                        margin: 0 2 0 2;

                        clear-button: true;
                    }

                    .list-categories {
                        width: 100%;
                        height: fit-content;

                        top: 0;
                        left: 0;

                        margin: 2 2 0 2;

                        Category {
                            width: 100%;
                            height: 20;

                            * {
                                alignment-x: center;
                            }

                            &:active Component {
                                text-color: gray;
                            }
                        }

                        SidebarButton {
                            Icon {
                                width: 8;
                                height: 8;

                                alignment: left;

                                margin-left: 5;
                            }
                        }
                    }

                    .category-sub {
                        width: 100%;

                        alignment-x: center;

                        padding-top: 5;
                        padding-bottom: 3;
                    }
                }

                Scrollbar {
                    width: 3;

                    top: 0;
                    left: 0;
                    bottom: 3;
                }
            }
        }

        .footer-sidebar {
            width: 100%;
            height: fit-content;

            left: 0;
            bottom: 0;
        }
    }

    .screen-renderer {
        height: 100%;
    }
}